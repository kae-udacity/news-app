<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_list_item">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_list_item_title" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGreyLight"
        android:textSize="@dimen/text_size_list_item_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section"
            android:layout_width="@dimen/width_list_item_info"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorGreyLight"
            android:textSize="@dimen/text_size_list_item_small" />

        <TextView
            android:id="@+id/publication_date"
            android:layout_width="@dimen/width_list_item_info"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorGreyLight"
            android:textSize="@dimen/text_size_list_item_small" />

    </LinearLayout>
</LinearLayout>